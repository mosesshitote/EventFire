<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:titleTextColor="@color/white"
        app:title="@string/app_name"

        android:title="@string/app_name"/>


<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:weightSum="1">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutcollegename"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingBottom="10dp">
            <EditText
                android:id="@+id/collegenameField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:hint="Enter your college name"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutcollegeaddress"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingBottom="10dp">


            <EditText
                android:id="@+id/addressField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your college address"
                />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/courseField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingLeft="3dp"
            android:paddingBottom="3dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="Engineering Courses in your College:"


            />

        <CheckBox
            android:id="@+id/checkboxCivil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Civil"
            android:textSize="18dp"
            android:theme="@style/MyCheckBox"/>

        <CheckBox
            android:id="@+id/checkboxMech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Mechanical"
            android:textSize="18dp"
            android:theme="@style/MyCheckBox"/>

        <CheckBox
            android:id="@+id/checkboxProd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:textSize="18dp"
            android:text="Production"
            android:theme="@style/MyCheckBox"/>

        <CheckBox
            android:id="@+id/checkboxElec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:textSize="18dp"
            android:text="Electronics"
            android:theme="@style/MyCheckBox"/>

        <CheckBox
            android:id="@+id/checkboxComps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:textSize="18dp"
            android:text="Computer"
            android:theme="@style/MyCheckBox"/>

        <CheckBox
            android:id="@+id/checkboxInstru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:textSize="18dp"
            android:text="Instrumentation"
            android:theme="@style/MyCheckBox"/>

        <CheckBox
            android:id="@+id/checkboxBio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:textSize="18dp"
            android:text="Biomedical"
            android:theme="@style/MyCheckBox"/>


        <CheckBox
            android:id="@+id/checkboxAuto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:textSize="18dp"
            android:text="Automobile"
            android:theme="@style/MyCheckBox"/>

        <CheckBox
            android:id="@+id/checkboxExtc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:textSize="18dp"
            android:text="Electronic and Telecommunication"
            android:theme="@style/MyCheckBox"/>


        <CheckBox
            android:id="@+id/checkboxChem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:textSize="18dp"
            android:text="Chemical"
            android:theme="@style/MyCheckBox"/>

        <CheckBox
            android:id="@+id/checkboxIt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:textSize="18dp"
            android:text="Information Technology"
            android:theme="@style/MyCheckBox"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutpassword"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <EditText
                android:id="@+id/passwordField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Password"
                android:inputType="textPassword"

                />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutconfirmpassword"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingBottom="10dp"

            >
            <EditText
                android:id="@+id/ConfirmpasswordField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                />
        </android.support.design.widget.TextInputLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/college"
            android:id="@+id/colImageView"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"


            android:cropToPadding="false"/>


        <Button
            android:id="@+id/collegeImageUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:textColor="#FF6600"
            android:background="@drawable/button"
            />


        <Button
            android:id="@+id/addCollege"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add College"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="#FF6600"
            android:background="@drawable/button"
            />


    </LinearLayout>
</ScrollView>
</LinearLayout>